# DaveGames - Variables de Entorno
# Copiar a .env y configurar valores reales

# Django Settings
SECRET_KEY=django-insecure-change-this-in-production-very-long-secret-key-here
DEBUG=True
DJANGO_SETTINGS_MODULE=davegames_project.settings

# Base de Datos Local
DB_NAME=davegames_db
DB_USER=postgres
DB_PASSWORD=sa654321
DB_HOST=localhost
DB_PORT=5432

# Base de Datos Producción (usar una de estas)
# DATABASE_URL=postgresql://user:password@host:port/database

# Hosts Permitidos (separados por comas)
ALLOWED_HOSTS=localhost,127.0.0.1,tu-dominio.com

# Configuración SSL
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# Archivos Estáticos y Media
STATIC_URL=/static/
MEDIA_URL=/media/
STATIC_ROOT=staticfiles
MEDIA_ROOT=media

# Configuración de Email (opcional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=tu-email@gmail.com
EMAIL_HOST_PASSWORD=tu-password

